@page
@model Spot.Areas.Application.Pages.Editor.Edit

@{
    ViewData["Title"] = "Редактирование";
}

<h1>@ViewData["Title"]</h1>
<div class="container my-5">
    <div class="bg-light p-1 rounded">
        <div class="col-sm-8 py-5 mx-auto">
            <form asp-route-returnUrl="" method="post">
                <label asp-for="Input.Name"></label>
                <input asp-for="Input.Name" class="form-control" value="@Model.SocialObject.Name"/>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
                <label asp-for="Input.Place"></label>
                <input asp-for="Input.Place" class="form-control" value="@Model.SocialObject.Place"/>
                <span asp-validation-for="Input.Place" class="text-danger"></span>
                <label asp-for="Input.Date"></label>
                <input type="date" asp-for="Input.Date" class="form-control" value="@Model.SocialObject.Date.Date.ToString()"/>
                <span asp-validation-for="Input.Date" class="text-danger"></span>
                <label asp-for="Input.Time"></label>
                <input type="time" asp-for="Input.Time" class="form-control" value="@Model.SocialObject.Date.TimeOfDay.ToString()"/>
                <span asp-validation-for="Input.Time" class="text-danger"></span>
                <label asp-for="Input.ShirtDescription"></label>
                <textarea asp-for="Input.ShirtDescription" class="form-control">@Model.SocialObject.ShirtDescription</textarea>
                <label asp-for="Input.FullDescription"></label>
                <textarea asp-for="Input.FullDescription" class="form-control">@Model.SocialObject.FullDescription</textarea>
                <button type="submit" class="btn btn-primary">Опубликовать</button>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}