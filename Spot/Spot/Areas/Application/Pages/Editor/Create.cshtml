@page
@model Spot.Areas.Application.Pages.Editor.Create

@{
    ViewData["Title"] = "Редактирование";
}

<h1>@ViewData["Title"]</h1>
<div class="container my-5">
    <div class="bg-light p-1 rounded">
        <div class="col-sm-8 py-5 mx-auto">
            <form asp-route-returnUrl="" method="post">
                <label asp-for="Input.Name"></label>
                <input asp-for="Input.Name" class="form-control"/>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
                <label asp-for="Input.Place"></label>
                <input asp-for="Input.Place" class="form-control"/>
                <span asp-validation-for="Input.Place" class="text-danger"></span>
                <label asp-for="Input.Date"></label>
                <input type="date" asp-for="Input.Date" class="form-control" />
                <span asp-validation-for="Input.Date" class="text-danger"></span>
                <label asp-for="Input.Time"></label>
                <input type="time" asp-for="Input.Time" class="form-control"/>
                <span asp-validation-for="Input.Time" class="text-danger"></span>
                <label asp-for="Input.ShirtDescription"></label>
                <textarea asp-for="Input.ShirtDescription" class="form-control"></textarea>
                <label asp-for="Input.FullDescription"></label>
                <textarea asp-for="Input.FullDescription" class="form-control"></textarea>
                <button type="submit" class="btn btn-primary">Опубликовать</button>
                
            </form>
        </div>
        <button class="mybutton">Кнопочка</button>
    </div>
</div>
